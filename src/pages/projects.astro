---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<BaseLayout title="Projects" sideBarActiveItemID="projects">
  <style>
    /* Ensures all images in the HorizontalCard components are the same size */
    .horizontal-card-wrapper img {
      width: 150px; /* Set a consistent width */
      height: 150px; /* Set a consistent height */
      object-fit: contain; /* Ensures the image fits without distortion */
      border-radius: 8px; /* Optional: rounded corners for uniformity */
    }
  </style>

  <div>
    <div class="text-3xl w-full font-bold mb-5">Research Projects</div>
  </div>

  <!-- Project 1 -->
  <div class="horizontal-card-wrapper hover:bg-gray-100 p-4 rounded-md transition duration-300">
    <HorizontalCard
      title="Automated Speech Recognition for Indic Language"
      img="/madhavi.webp"
      desc="Madhav Labs, IIT Kanpur"
      url="#"
      style="width: 150px; height: 150px;"
    />
    <div class="flex gap-4 mt-2 ml-4">
      <a href="/projects/reports/ASR_INDIC_Report" class="btn report-btn">ðŸ“„ Report</a>
      <a href="https://github.com/MridulPandey17/ASR_INDIC" target="_blank" class="btn github-btn">
        <i class="fab fa-github"></i> GitHub
      </a>
    </div>
    <p class="mt-2 text-gray-600">
      <ul style="list-style-type: disc; display: flex; padding-left: 30px; margin-bottom: 10px;">
        <li style="margin-right: 30px;">Conformers</li>
        <li style="margin-right: 30px;">Wave2Vec</li>
        <li style="margin-right: 30px;">Domain Adaptation</li>
        <li style="margin-right: 30px;">Active Learning</li>
        <li style="margin-right: 30px;">Signal Processing</li>
        <li>FTTs</li>
      </ul>
    </p>
  </div>

  <div class="divider my-4"></div>

  <!-- Project 2 -->
  <div class="horizontal-card-wrapper hover:bg-gray-100 p-4 rounded-md transition duration-300">
    <HorizontalCard
      title="Poverty Estimation in Haryana using Open Source Data"
