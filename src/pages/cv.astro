---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Resume" sideBarActiveItemID="cv">
  <!-- Main Resume Content -->
  <div class="mb-5">
    <div class="text-3xl w-full font-bold text-center">Resume</div>
  </div>

  <!-- PDF as Images -->
  <div class="pdf-images flex flex-col items-center gap-4">
    <!-- Replace with actual image paths for the pages -->
    <img 
      src="/resume_Mridul_pandey-1.png" 
      alt="Resume Page 1" 
      class="w-full max-w-4xl border rounded-lg shadow-md">
    
  </div>

  <!-- Download Button -->
  <div class="mt-8 flex justify-center">
    <a 
      href="/resume_Mridul_pandey.pdf" 
      download 
      class="px-6 py-3 bg-blue-500 text-white font-semibold rounded-lg shadow hover:bg-blue-600 transition">
      Download Resume
    </a>
  </div>
</BaseLayout>
